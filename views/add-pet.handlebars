    <div class="form_container">
      <h1>Pet Intake Form</h1>
        <form id="petForm">
          <div class="formSection">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" />
          </div>
          <div>
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" />
          </div>
          <div>
            <label for="gender">Gender:</label>
            <select id="gender" name="gender">
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </div>
          <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description"></textarea>
          </div>
          <div>
              <div>
                <label for="needsHome">Needs a Home?</label>
                <input type="checkbox" id="needsHome" name="needsHome" />
              </div>
              <div>
                <label for="goodWithKids">Good with Kids:</label>
                <input type="checkbox" id="goodWithKids" name="goodWithKids" />
              </div>
          </div>
          <div>
            <label for="image">Avatar:</label>
            <div class="avatar_container">
                <label for="profilePicture1">
                  <input
                    type="radio"
                    name="image"
                    id="profilePicture1"
                    value="/assets/profile_images/cat1.png"
                  />
                  <img
                    src="/assets/profile_images/cat1.png"
                    alt="Icon 1"
                    class="profile_img"
                  />
                </label>
                <label for="profilePicture2">
                  <input
                    type="radio"
